<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/city"
    android:backgroundTint="#FFFFFF"
    tools:context=".CitySearch">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="401dp"
        android:layout_below="@+id/id_citySearch"
        android:layout_marginTop="105dp"
        android:alpha="0.7"
        android:background="@drawable/w03d"
        android:orientation="horizontal"
        tools:visibility="visible"></LinearLayout>

    <EditText
        android:id="@+id/id_cityEdit"
        android:layout_width="239dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="86dp"
        android:layout_marginTop="34dp"
        android:layout_marginEnd="86dp"
        android:layout_weight="1"
        android:backgroundTint="@color/city"
        android:fontFamily="@font/opensans"
        android:textColor="@color/city"
        android:textSize="22sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/id_citySearch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/id_cityEdit"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="90dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="85dp"
        android:background="@drawable/customborder"
        android:backgroundTint="@color/colorAccent"
        android:fontFamily="sans-serif-medium"
        android:text="Search"
        android:textColor="#FFFFFF"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="63dp"
        android:layout_marginEnd="0dp"
        android:fontFamily="@font/roboto"
        android:shadowColor="#000000"
        android:text="Enter City Name"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="34sp" />


</RelativeLayout>